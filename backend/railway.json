{
    "builds": [
      {
        "src": "pom.xml",
        "use": "@railway/java",
        "config": {
          "startCommand": "java -Dserver.port=$PORT -Dserver.address=0.0.0.0 -jar target/*.jar"
        }
      }
    ],
    "deploy": {
      "startTimeout": 180000,
      "healthcheckPath": "/api/health",
      "restartPolicy": {
        "type": "on-failure",
        "maxRetries": 3
      }
    }
  }